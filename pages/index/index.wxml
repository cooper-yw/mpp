    <form bindsubmit="loginSubmit">
      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">用户名</label></view>
        <view class="weui-cell__bd">
        <input id="js_input" class="weui-input" name="account" placeholder="请输入用户名"/>
        </view>
      </view>
      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">密 码</label></view>
        <view class="weui-cell__bd">
        <input id="js_input" class="weui-input" password name="password" placeholder="请输入密码"/>
        </view>
      </view>
      <view class="weui-cell weui-cell_active" >
        <button type="primary" form-type="submit" style="margin-top:50px;" loading="{{loading}}">登 录</button>
      </view>
  </form>
  </view>
  <view wx:if="{{userInfo !== null}}">
    <view>
      {{userInfo.role}}
    </view>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
    <br></br>
  </view>
